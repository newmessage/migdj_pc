const GAME_STATE_READY		=	1 << 0;
const GAME_STATE_PLAY		=	1 << 1;
const GAME_STATE_GAMEOVER	=	1 << 2;

function GameState() {
	var m_state = GAME_STATE_READY;
	
	this.Update = function(time) {
		switch(m_state)
		{
		case GAME_STATE_READY:
			break;
		case GAME_STATE_PLAY:
			break;
		case GAME_STATE_GAMEOVER:
			break;
		}
	}
	
	this.Draw = function() {
		switch(m_state)
		{
		case GAME_STATE_READY:
			break;
		case GAME_STATE_PLAY:
			break;
		case GAME_STATE_GAMEOVER:
			break;
		}
	}
}