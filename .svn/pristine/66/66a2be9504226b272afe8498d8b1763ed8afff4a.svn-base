body {
    background: #000000; 
    text-align: center;
}

a:hover {
    text-decoration: none;
}

#gameDiv {
	width: 100%; 
	height: 100%;
	color: #000000;
	position: absolute; top: 0; left: 0;
    }  

@font-face {
  font-family: 'Accidental Presidency';
  src: url('http://ingameads.gameloft.com/ads/adserver/web/fullscreen/templates/minigame/dj/fonts/accid.ttf');
}

#toast {
   position: absolute;

   -webkit-transition: opacity 0.5s;
   -moz-transition: opacity 0.5s;
   -o-transition: opacity 0.5s;
   transition: opacity 0.5s;

   opacity: 0;
   z-index: 1;
   display: none;
}

